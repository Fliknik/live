<odoo>
    <data>
        <record id="view_order_deliver_form_inherited" model="ir.ui.view">
            <field name="name">purchase.order.inherited</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="model">purchase.order</field>
            <field name="priority">100</field>
            <field type="xml" name="arch">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <xpath expr="//page[@name='purchase_delivery_invoice']/group/group/field[@name='picking_type_id']" position="move"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>